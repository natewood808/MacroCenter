<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @* asp-href-include is a built in tag helper which generates additional link elements
        for all the files it finds in the path passed into the value *@
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
    <link rel="stylesheet" asp-href-include="lib/font-awesome/css/*.css" />
    <link rel="stylesheet" asp-href-include="Styles/*.css" />
    <title>Macro Center: Electronics</title>
</head>
<body>
    <nav class="navbar bg-info justify-content-between">
        <a href="#"><img class="logo" src="@Url.Content("~/Images/logo.png")" /></a>

        <div class="justify-content-center">
            <a class="link rounded" asp-controller="Product" asp-action="List">Products</a>
            <a class="link rounded" asp-controller="About" asp-action="Index">About</a>
            <a class="link rounded" asp-controller="Faq" asp-action="Index">FAQ</a>
            <a class="link rounded" asp-controller="Account" asp-action="Login">Login</a>
        </div>

        <div class="float-right">
            @await Component.InvokeAsync("CartSummary")
        </div>

    </nav>
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>

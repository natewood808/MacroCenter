@* This is the view that is returned by the NavigationMenuViewComponent Invoke method. 
   View components' views are stored in the Shared/Components/"ViewComponentName"
   The default view will be called Default.cshtml. *@
@model IEnumerable<string>

<a class="btn btn-outline-dark btn-block m-2"
   asp-action="List"
   asp-controller="Product"
   asp-route-category="">Home</a>

@foreach (string category in Model)
{
    <a class="btn btn-block m-2 @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-dark")"
       asp-action="List"
       asp-controller="Product"
       asp-route-category="@category"
       asp-route-page="1">@category</a>
}

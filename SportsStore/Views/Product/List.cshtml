@* @model IEnumerable<Product> View expects a sequence of Product objects *@
@model ProductsListViewModel
@foreach (var p in Model.Products) 
{
    <div class="card m-3 rounded">
        <div class="card-block m-2">
            <h3>
                <strong>@p.Name</strong>
                <span class="float-right bg-success text-white rounded m-2 p-1">
                    @p.Price.ToString("c")
                </span>
                <span class="lead">@p.Description</span>
            </h3>
        </div>
    </div>
}

<div page-model="@Model.PagingInfo" 
     page-action="List" 
     page-classes-enabled="true"
     page-class="btn" 
     page-class-normal="btn-default"
     page-class-selected="btn-primary" class="btn-group float-right">
</div>
